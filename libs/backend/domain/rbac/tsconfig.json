{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/rbac",
    "rootDir": "src",
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "../../../..",
    "paths": {
      "@workix/backend/shared/core": ["libs/backend/shared/core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
