# Auth Service Configuration

# Service
AUTH_SERVICE_PORT=5000
AUTH_SERVICE_HOST=0.0.0.0
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME_AUTH=workix_admin
DB_LOGGING=false

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# OAuth2 (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/oauth/google/callback

# OAuth2 (GitHub)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/auth/oauth/github/callback

# OAuth2 (Apple)
APPLE_TEAM_ID=your-apple-team-id
APPLE_SERVICE_ID=your-apple-service-id
APPLE_KEY_ID=your-apple-key-id
APPLE_KEY_CONTENT=your-apple-key-content
APPLE_CALLBACK_URL=http://localhost:5000/auth/oauth/apple/callback

# Phone OTP (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Verification (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@workix.com

# Rate Limiting
RATE_LIMIT_OTP_REQUESTS=3
RATE_LIMIT_OTP_WINDOW_MS=600000

# Account Lockout
ACCOUNT_LOCKOUT_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION_MS=900000
