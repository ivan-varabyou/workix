{
  "extends": [
    "../../tsconfig.base.json",
    "../../tsconfig.spec.base.json"
  ],
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/apps/monolith",
    "types": [
      "node",
      "vitest/globals"
    ],
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
