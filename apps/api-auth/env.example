# ============================================
# AUTH SERVICE CONFIGURATION
# ============================================

# Basic Configuration
NODE_ENV=development
API_AUTH_PORT=7102
# API 7102 → DB 5102 (change first digit: 7 → 5)
DATABASE_URL_AUTH=postgresql://postgres:postgres@localhost:5102/workix_auth

# Security
JWT_SECRET=dev-jwt-secret-minimum-32-characters-long-for-development-only
SERVICE_KEY=dev-service-key-minimum-32-characters-long-for-development-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:7300,http://localhost:7301

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_TTL=900
RATE_LIMIT_AUTH_MAX=5

# ============================================
# AUTHENTICATION FEATURES CONFIGURATION
# ============================================

# Basic Authentication (enabled by default)
AUTH_ENABLE_REGISTRATION=true
AUTH_ENABLE_LOGIN=true
AUTH_ENABLE_PASSWORD_RESET=true

# Two-Factor Authentication (disabled by default)
AUTH_ENABLE_2FA=false

# OAuth2 Providers (disabled by default, requires additional setup)
AUTH_ENABLE_OAUTH2=false
AUTH_ENABLE_OAUTH2_GOOGLE=false
AUTH_ENABLE_OAUTH2_GITHUB=false
AUTH_ENABLE_OAUTH2_APPLE=false

# OAuth2 Provider Credentials (required if OAuth2 is enabled)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_TEAM_ID=your-apple-team-id
# APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY=your-apple-private-key

# Phone OTP (disabled by default, requires SMS provider)
AUTH_ENABLE_PHONE_OTP=false

# Phone OTP Provider Configuration (required if Phone OTP is enabled)
# SMS_PROVIDER=twilio|aws-sns|custom
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Verification (enabled by default)
AUTH_ENABLE_EMAIL_VERIFICATION=true

# Email Provider Configuration (required for email verification)
# EMAIL_PROVIDER=smtp|sendgrid|ses|custom
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password
# SENDGRID_API_KEY=your-sendgrid-api-key
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY_ID=your-aws-access-key
# AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key

# Biometric Authentication (disabled by default)
AUTH_ENABLE_BIOMETRIC=false

# Session Management (enabled by default)
AUTH_ENABLE_SESSIONS=true
