# API Gateway Configuration
API_GATEWAY_URL=http://localhost:7000
SERVICE_KEY=workix-service-key-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:7301

# Logging
LOG_LEVEL=debug
