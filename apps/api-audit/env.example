# Audit Service Environment Variables

# Service Configuration
PORT=7109
NODE_ENV=development

# Database Configuration
DATABASE_URL_AUDIT=postgresql://postgres:postgres@localhost:5109/workix_audit

# Redis Configuration (for Pub/Sub)
REDIS_HOST=localhost
REDIS_PORT=6379
